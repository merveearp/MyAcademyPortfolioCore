
@*
    AdminLayoutHeader

*@

<header class="pc-header">
    <div class="header-wrapper">
        
        <!-- [Mobile Media Block end] -->
        <div class="ms-auto">
            <ul class="list-unstyled">
               
                <li class="dropdown pc-h-item header-user-profile">
                    <a class="pc-head-link dropdown-toggle arrow-none me-0"
                       data-bs-toggle="dropdown"
                       href="#"
                       role="button"
                       aria-haspopup="false"
                       data-bs-auto-close="outside"
                       aria-expanded="false">
                        <img src="~/Mantis-Bootstrap-1.0.0/dist/assets/images/user/merve-avatar.jpeg" alt="user-image" class="user-avtar">
                        <span>@ViewBag.username</span>
                    </a>
                    <div class="dropdown-menu dropdown-user-profile dropdown-menu-end pc-h-dropdown">
                        <div class="dropdown-header">
                            <div class="d-flex mb-1">
                                <div class="flex-shrink-0">
                                    <img src="~/Mantis-Bootstrap-1.0.0/dist/assets/images/user/merve-avatar.jpeg" alt="user-image" class="user-avtar wid-35">
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h6 class="mb-1">@ViewBag.username</h6>
                                    <span>@ViewBag.Title</span>
                                </div>
                                <a href="/Auth/Logout" class="pc-head-link bg-transparent"><i class="ti ti-power text-danger"></i></a>
                            </div>
                        </div>
                        <ul class="nav drp-tabs nav-fill nav-tabs" id="mydrpTab" role="tablist">
                            <li class="nav-item" role="presentation">
                                <button class="nav-link active"
                                        id="drp-t1"
                                        data-bs-toggle="tab"
                                        data-bs-target="#drp-tab-1"
                                        type="button"
                                        role="tab"
                                        aria-controls="drp-tab-1"
                                        aria-selected="true">
                                    <i class="ti ti-user"></i> Profil
                                </button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link"
                                        id="drp-t2"
                                        data-bs-toggle="tab"
                                        data-bs-target="#drp-tab-2"
                                        type="button"
                                        role="tab"
                                        aria-controls="drp-tab-2"
                                        aria-selected="false">
                                    <i class="ti ti-settings"></i> Ayarlar
                                </button>
                            </li>
                        </ul>
                        <div class="tab-content" id="mysrpTabContent">
                            <div class="tab-pane fade show active" id="drp-tab-1" role="tabpanel" aria-labelledby="drp-t1" tabindex="0">
                                 <a href="/Auth/EditProfile" class="dropdown-item">
                                    <i class="ti ti-edit-circle"></i>
                                    <span>Profili Düzenle</span>
                                </a>
                                
                                <a href="/Auth/Logout" class="dropdown-item">
                                    <i class="ti ti-power"></i>
                                    <span>Çıkış Yap</span>
                                </a>
                            </div>
                            
                        </div>
                        <div class="tab-content" id="mysrpTabContent">
                            <div class="tab-pane fade show active" id="drp-tab-2" role="tabpanel" aria-labelledby="drp-t2" tabindex="0">
                                <a href="/Auth/EditPassword" class="dropdown-item">
                                    <i class="ti ti-edit-circle"></i>
                                    <span>Şifre İşlemleri</span>
                                </a>

                            </div>

                        </div>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</header>