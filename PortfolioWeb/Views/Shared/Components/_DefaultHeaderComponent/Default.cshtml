@model List<SocialMedia>
@*
    _DefaultNavMenuComponent
*@

<header id="header" class="header d-flex align-items-center light-background sticky-top">
    <div class="container-fluid position-relative d-flex align-items-center justify-content-between">

        <a href="/Default/Index" class="logo d-flex align-items-center me-auto me-xl-0">
            <!-- Logo solda -->
            <img src="~/Kelly-1.0.0/assets/img/logo4.png" alt="Benim Logom"
            class="img-fluid" style="height:150px; margin-right:10px;">

            <!-- Yazı sağda -->
            <h3 class="sitename m-0">Merve Arpacıoğlu Türk</h3>
        </a>

        <nav id="navmenu" class="navmenu">
            <ul>
                <li><a href="#hero" class="active">Ana Sayfa</a></li>
                <li><a href="#about">Hakkımda</a></li>
                <li><a href="#resume">Özgeçmiş</a></li>
                <li><a href="#skills">Yeteneklerim</a></li>
                <li><a href="#stats">İstatistik</a></li>
                <li><a href="#testimonials">Referanslarım</a></li>
                <li><a href="#portfolio">Projelerim</a></li>
                <li><a href="#contact">İletişim</a></li>
                <li><a href="/Auth/Login">Yönetim Paneli</a></li>
            </ul>
            <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
        </nav>

        <div class="header-social-links">
            @foreach(var item in Model)
            {
                <a href="@item.SocialUrl" class="@item.SocialName" target="_blank"><i class="@item.SocialIcon"></i></a>
            }
        </div>

    </div>
</header>