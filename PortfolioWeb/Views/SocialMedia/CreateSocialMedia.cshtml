@model SocialMedia
@{
    ViewData["Title"] = "Yeni Sosyal Medya Hesabı EKle";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}
<div class="container-fluid pt-4 px-4">
    <form asp-controller="SocialMedia" asp-action="CreateSocialMedia" method="post">
        <div class="row g-4 bg-light rounded h-100 p-4">
            <div class="col-sm-12 col-xl-12">

                <div class="mb-3">
                    <label asp-for="SocialName" class="form-label"></label>
                    <input asp-for="SocialName" class="form-control" placeholder="Örn: LinkedIn, GitHub, Instagram" />
                    <span asp-validation-for="SocialName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="SocialUrl" class="form-label"></label>
                    <input asp-for="SocialUrl" class="form-control" placeholder="Örn: https://www.linkedin.com/in/kullaniciadi" />
                    <span asp-validation-for="SocialUrl" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="SocialIcon" class="form-label"></label>
                    <input asp-for="SocialIcon" class="form-control" placeholder="Örn: bi bi-linkedin, fa-brands fa-github" />
                    <span asp-validation-for="SocialIcon" class="text-danger"></span>
                    <small class="text-muted">
                        Kullanabileceğin ikon class’larını buraya yaz (Bootstrap Icons, Font Awesome veya Tabler Icons).
                    </small>
                </div>

            </div>

            <div class="col-sm-12 mt-3 text-end">
                <button type="submit" class="btn btn-success d-inline-flex">
                    <i class="ti ti-plus me-1"></i> Kaydet
                </button>
                <a href="/SocialMedia/Index" class="btn btn-warning d-inline-flex ms-2">
                    <i class="ti ti-arrow-back-up me-1"></i> Geri Dön
                </a>
            </div>
        </div>
    </form>
</div>