        <div class="col-md-6 col-xl-3">
            <div class="card">
                <div class="card-body">
                    <h4 class="mb-2 f-w-400 text-muted">@item.StatName</h4>
                    <h3 class="mb-3">
                        <span class="badge @badge">
                            <i class="@icon"></i> @item.StatValue+
                        </span>
                    </h3>
                </div>
            </div>
        </div> *@
        <div class="col-md-6 col-xl-3">
            <div class="card social-widget-card @badge">
                <div class="card-body">
                    <h3 class="text-white m-0">@item.StatValue +</h3>
                    <span class="m-t-10">@item.StatName</span>
                    <i class="fab @icon"></i>
                </div>
            </div>
        </div>
      
    }
   
</div>