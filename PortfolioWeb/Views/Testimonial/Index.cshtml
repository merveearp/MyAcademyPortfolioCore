@model List<Testimonial>
@{
    ViewData["Title"] = "Yorum ve Görüşler & Referanslar ";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

@{
    int count = 0;
}

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Referans </th>
        <th>Başlık</th>
        <th>Hakkındaki Yorum & Görüş</th>
        <th>Referans Profil </th>
        <th>İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>

            <td>@count</td>
            <td>@item.Name</td>
            <td>@item.Title</td>
            <td>@item.Comment</td>
            <td>@item.ImageUrl</td>
            <td>
                <a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-danger d-inline-flex"><i class="ti ti-alert-triangle me-1"></i>Sil</a>
                <a href="/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-success d-inline-flex"><i class="ti ti-circle-check me-1"></i>Güncelle</a>
            </td>

        </tr>
    }

</table>

<a href="/Testimonial/CreateTestimonial" class="btn btn-primary"><i class="ti ti-file-plus"></i>Yeni Referans Oluştur</a>




