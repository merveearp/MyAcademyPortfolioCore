@model List<UserMessage>
@{
    ViewData["Title"] = "Gelen Mesajlar";
    Layout = "~/Views/AdminLayout/Layout.cshtml";    
    int count = 0;
}

<div class="container-fluid pt-4 px-4">
    <div class="bg-light rounded p-4">
        <h6 class="mb-3">Gelen Mesajlar</h6>

        <div class="table-responsive">
            <table class="table table-bordered table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th style="width:70px">#</th>
                        <th>Ad Soyad</th>
                        <th>E-posta</th>
                        <th>Konu &amp; Mesaj</th>
                        <th style="width:120px">Durum</th>
                        <th style="width:180px">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr class="@(item.IsRead ? "" : "table-warning")">
                            <td>@count</td>
                            <td class="fw-semibold">@item.Name</td>
                            <td>@item.Email</td>
                            <td>
                                <div>
                                    <div class="fw-semibold mb-1">@item.Subject</div  >                             
                                    <pre class="mb-0 text-muted" style="white-space:pre-wrap;">@item.MessageBody</pre>
                                </div>
                            </td>
                            <td>
                                @if (item.IsRead)
                                {
                                    <span class="badge bg-success">Okundu</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">Yeni Mesaj</span>
                                }
                            </td>
                            <td class="text-nowrap">
                                <a class="btn btn-sm btn-@(item.IsRead ? "info" : "primary")"
                                   asp-controller="Message" asp-action="Read" asp-route-id="@item.UserMessageId">
                                    @(item.IsRead ? "Okundu" : "Okunmadı")
                                </a>
                                <button onclick="deleteMessage(@item.UserMessageId)" class="btn btn-outline-danger">Sil</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>

<script>

    function deleteMessage(id){
     Swal.fire({
          title: "Bu Mesajı Silmek İstediğinize Emin Misiniz?",
          text: "Bu işlemi geri alamazsınız!",
          icon: "warning",
          showCancelButton: true,
          confirmButtonColor: "#3085d6",
          cancelButtonColor: "#d33",
          confirmButtonText: "Evet, Sil!",
          cancelButtonText: "İptal!"
        }).then((result) => {
          if (result.isConfirmed) {
            window.location.href="/Message/Delete/"+ id;
          }
        });
    }
            

</script>