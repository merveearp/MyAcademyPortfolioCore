@model ContactInfo
@{
    ViewData["Title"] = "İletişim Bilgilerini Düzenle ";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}
<div class="container-fluid pt-4 px-4">
    <form asp-controller="Contact" asp-action="EditContact" method="post">       
        <input type="hidden" asp-for="ContactInfoId" />

        <div class="row g-4 bg-light rounded h-100 p-4">
            <div class="col-12 col-lg-6">
                <h5 class="mb-3">Bilgiler</h5>

                <div class="mb-3">
                    <label asp-for="Address" class="form-label"></label>
                    <textarea asp-for="Address" class="form-control" rows="4" placeholder="Adresinizi yazın"></textarea>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PhoneNumber" class="form-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" type="tel" placeholder="05xx xxx xx xx" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" type="email" placeholder="ornek@mail.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="MapUrl" class="form-label"></label>
                    <input asp-for="MapUrl" class="form-control" type="url" placeholder="https://www.google.com/maps/embed?pb=..." />
                    <span asp-validation-for="MapUrl" class="text-danger"></span>
                    <small class="text-muted">
                        Google Maps &rarr; Paylaş &rarr; <b>Haritayı yerleştir</b> &rarr; <em>src</em> içindeki <b>embed</b> linkini girin.
                    </small>
                </div>
            </div>

            <div class="col-12 col-lg-6">
                <h5 class="mb-3">Harita Önizleme</h5>
                <div class="ratio ratio-4x3">
                    <iframe
                        src="@Model.MapUrl"
                        style="border:0;"
                        allowfullscreen
                        loading="lazy"
                        referrerpolicy="no-referrer-when-downgrade">
                    </iframe>
                </div>
            </div>

            <div class="col-12 mt-3 text-end">
                <button type="submit" class="btn btn-success d-inline-flex">
                    <i class="ti ti-rotate-clockwise-2 me-1"></i> Güncelle
                </button>
                <a href="/Contact/Index" class="btn btn-warning d-inline-flex ms-2">
                    <i class="ti ti-arrow-back-up me-1"></i> Geri Dön
                </a>
            </div>
        </div>
    </form>
</div>
